.container {
  /* padding: 0 16px;
  padding-top: 16px; */
  height: 100vh;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  background: #fff;
}

.container .swiper {
  height: 398px;
  border-radius: 4px;
  box-shadow: 0 0 24px rgba(0, 0, 0, 0.2);
  background: #fafafa;
}

.container .swiper .image {
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 999;
}

.btn__active {
  background: #108ee9;
  color: #fff;
}

.btn__unactive {
  color: rgba(0, 0, 0, 0.3);
  background-color: #f7f7f7;
}

.num {
  font-size: 11px;
  color: #666;
  padding: 0 10px;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
}

.content .flex-wrap {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
}

.content .flex-wrap .item {
  display: flex;
  flex-direction: column;
  font-size: 11px;
  color: #999;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-align-items: center;
  align-items: center;
  width: 62px;
  height: 62px;
  padding: 0 9px;
  background: #fff;
}

.sign {
  width: 100%;
  background: #fff;
}

.content .flex-wrap .item .icon {
  width: 23px;
  height: 23px;
  margin-bottom: 9px;
}

.bottom-btn {
  width: 100%;
  display: flex;
  justify-content: space-around;
  height: 80rpx;
}

.bottom-btn-color {
  margin: 0 !important;
  width: 42%;
  font-size: 30rpx;
  line-height: 80rpx;
  padding: 0;
}

.result-canvas {
  position: fixed;
  top: -5000px;
  left: -5000px;
}

.img-pop {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 998;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.7);
  -webkit-align-items: center;
  align-items: center;
  -webkit-justify-content: center;
  justify-content: center;
  display: flex;
  flex-direction: column;
}

.img-pop .currentImage {
  width: 100%;
  height: 574px;
  display: block;
}

.closePop {
  width: 100%;
  height: 70px;
  color: #fff;
  font-size: 14px;
  background: #333;
  -webkit-justify-content: center;
  justify-content: center;
  -webkit-align-items: center;
  align-items: center;
  display: flex;
  flex-direction: column;
}

.closePop .close {
  width: 16px;
  height: 16px;
  margin-top: 11px;
}
